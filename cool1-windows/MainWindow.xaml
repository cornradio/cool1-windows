<Window x:Class="Cool1Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cool1Windows"
        xmlns:vm="clr-namespace:Cool1Windows.ViewModels"
        xmlns:views="clr-namespace:Cool1Windows.Views"
        mc:Ignorable="d"
         Title="Cool1 Windows" Height="700" Width="500"
         Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="20" AllowDrop="True" Drop="Grid_Drop" DragOver="Grid_DragOver" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Top Bar -->
            <RowDefinition Height="Auto"/> <!-- Divider -->
            <RowDefinition Height="Auto"/> <!-- Filter Bar -->
            <RowDefinition Height="*"/>    <!-- List -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <DockPanel Grid.Row="0">
            <Button Content="ADD" Command="{Binding SelectManualCommand}" ToolTip="Add App" Width="50" Padding="5" Margin="0,0,5,0"
                    Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource PrimaryTextBrush}"/>
            
            <Button DockPanel.Dock="Right" Content="RUN" Command="{Binding LaunchSelectedCommand}" 
                    Padding="15,5" Margin="5,0,0,0" Background="{DynamicResource AccentBrush}" Foreground="{DynamicResource AccentForegroundBrush}" FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <ComboBox ItemsSource="{Binding Apps}" SelectedItem="{Binding SelectedApp}" 
                      DisplayMemberPath="Name" Margin="5,0"/>
        </DockPanel>

        <Separator Grid.Row="1"/>

        <!-- Filter Bar -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="Recent" IsChecked="True" Margin="0,0,10,0"/>
                <RadioButton Content="Name" Margin="0,0,10,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ToggleButton IsChecked="{Binding IsEditMode}" Padding="10,2" Margin="0,0,5,0" ToolTip="Edit Mode">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                            <Setter Property="Content" Value="✎"/>
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

                <ToggleButton IsChecked="{Binding ShowOnlyFavorites}" Padding="10,2" ToolTip="Favorites">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                            <Setter Property="Content" Value="☆"/>
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Content" Value="★"/>
                                    <Setter Property="Foreground" Value="{DynamicResource StarActiveBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
            </StackPanel>
        </Grid>

        <!-- History List -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding DisplayedHistory}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:AppItemControl/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
