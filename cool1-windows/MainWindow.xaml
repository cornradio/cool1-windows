<Window x:Class="Cool1Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cool1Windows"
        xmlns:vm="clr-namespace:Cool1Windows.ViewModels"
        xmlns:views="clr-namespace:Cool1Windows.Views"
        mc:Ignorable="d"
         Title="Cool1 Windows" Height="700" Width="500"
         Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="20" AllowDrop="True" Drop="Grid_Drop" DragOver="Grid_DragOver" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Top Bar -->
            <RowDefinition Height="Auto"/> <!-- Search Bar -->
            <RowDefinition Height="Auto"/> <!-- Divider -->
            <RowDefinition Height="Auto"/> <!-- Filter Bar -->
            <RowDefinition Height="*"/>    <!-- List -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <DockPanel Grid.Row="0">
            <Button Content="ADD" Command="{Binding SelectManualCommand}" ToolTip="Add App" Width="50" Padding="5" Margin="0,0,5,0"
                    Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource PrimaryTextBrush}"/>
            
            <Button DockPanel.Dock="Right" Content="RUN" Command="{Binding LaunchSelectedCommand}" 
                    Padding="15,5" Margin="5,0,0,0" Background="{DynamicResource AccentBrush}" Foreground="{DynamicResource AccentForegroundBrush}" FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <ComboBox ItemsSource="{Binding Apps}" SelectedItem="{Binding SelectedApp}" 
                      Margin="5,0" VerticalContentAlignment="Center">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </DockPanel>
        
        <!-- Search Bar -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <TextBox x:Name="SearchBox"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     Tag="æœç´¢å·²æ·»åŠ ç¨‹åº..."
                     Padding="30,5,30,5"/>
            
            <!-- Search Icon -->
            <TextBlock IsHitTestVisible="False" Text="ðŸ”" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="{DynamicResource SecondaryTextBrush}"/>
            
            <!-- Placeholder Text -->
            <TextBlock IsHitTestVisible="False" Text="æœç´¢ç¨‹åº..." VerticalAlignment="Center" HorizontalAlignment="Left" Margin="32,0,0,0" Foreground="{DynamicResource SecondaryTextBrush}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SearchText}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Clear Button -->
            <Button Content="âœ•" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Margin="0,0,5,0"
                    Padding="5,0"
                    Width="24" Height="24"
                    Background="Transparent" BorderThickness="0"
                    Command="{Binding ClearSearchCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SearchText}" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <Separator Grid.Row="2"/>

        <!-- Filter Bar -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="12"/>
                <RadioButton Content="æœ€è¿‘ä½¿ç”¨" IsChecked="{Binding IsSortByRecent}" Style="{StaticResource SegmentedRadioButtonStyle}" Margin="0,0,5,0"/>
                <RadioButton Content="åç§°æŽ’åº" IsChecked="{Binding IsSortByName}" Style="{StaticResource SegmentedRadioButtonStyle}" Margin="0,0,5,0"/>
                <RadioButton Content="æ‰‹åŠ¨æŽ’åº" IsChecked="{Binding IsSortByManual}" Style="{StaticResource SegmentedRadioButtonStyle}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ToggleButton IsChecked="{Binding IsEditMode}" Padding="10,2" Margin="0,0,5,0" ToolTip="Edit Mode" Content="âœŽ"/>

                <ToggleButton IsChecked="{Binding ShowOnlyFavorites}" Padding="10,2" ToolTip="Favorites">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                            <Setter Property="Content" Value="â˜†"/>
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Content" Value="â˜…"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
            </StackPanel>
        </Grid>

        <!-- History List -->
        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding DisplayedHistory}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:AppItemControl/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Footer Information -->
        <Border Grid.Row="5" Margin="0,5,0,0" Padding="0,2,0,0" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}">
            <DockPanel LastChildFill="False">
                <Button Command="{Binding OpenGitHubCommand}" 
                        Background="Transparent" BorderThickness="0" Padding="2,0"
                        ToolTip="View on GitHub" Cursor="Hand" Height="20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="GitHub" VerticalAlignment="Center" Margin="0,0,3,0" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBlock Text="ðŸ”—" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>
                </Button>
                
                <TextBlock Text="{Binding Version}" 
                           DockPanel.Dock="Right" 
                           VerticalAlignment="Center" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           FontSize="10" 
                           Margin="0,0,5,0"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
