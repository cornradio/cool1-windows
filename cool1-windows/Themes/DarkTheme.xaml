<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Backgrounds -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#121212"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#333333"/>
    
    <!-- Text -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#E1E1E1"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#AAAAAA"/>
    
    <!-- Accents -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0A84FF"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="White"/>
    
    <!-- Buttons -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="DeleteButtonBackgroundBrush" Color="#442727"/>
    <SolidColorBrush x:Key="DeleteButtonForegroundBrush" Color="#FF5252"/>
    <SolidColorBrush x:Key="KillButtonBackgroundBrush" Color="#443527"/>
    <SolidColorBrush x:Key="KillButtonForegroundBrush" Color="#FFAB40"/>
    
    <SolidColorBrush x:Key="RunningBrush" Color="#1B3320"/>
    <SolidColorBrush x:Key="NotRunningBrush" Color="#2D2D2D"/>
    
    <SolidColorBrush x:Key="StarActiveBrush" Color="#FFD700"/>
    <SolidColorBrush x:Key="StarInactiveBrush" Color="#444444"/>
    
</ResourceDictionary>
