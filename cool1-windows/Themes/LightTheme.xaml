<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Backgrounds -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F5F5F7"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#EEEEEE"/>
    
    <!-- Text -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1D1D1F"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#86868B"/>
    
    <!-- Accents -->
    <SolidColorBrush x:Key="AccentBrush" Color="#007AFF"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="White"/>
    
    <!-- Buttons -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DeleteButtonBackgroundBrush" Color="#FFEBEE"/>
    <SolidColorBrush x:Key="DeleteButtonForegroundBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="KillButtonBackgroundBrush" Color="#FFF3E0"/>
    <SolidColorBrush x:Key="KillButtonForegroundBrush" Color="#E65100"/>
    
    <SolidColorBrush x:Key="RunningBrush" Color="#E8F5E9"/>
    <SolidColorBrush x:Key="NotRunningBrush" Color="#F5F5F7"/>
    
    <SolidColorBrush x:Key="StarActiveBrush" Color="#FFD700"/>
    <SolidColorBrush x:Key="StarInactiveBrush" Color="#CCCCCC"/>
    
</ResourceDictionary>
